# Google API Key for Gemini
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# API Key for self-hosted LLM (AMA activity)
# Supports single value or comma-separated list for failover:
# Single: AMA_API_KEY=your_key
# Failover: AMA_API_KEY=primary_key,secondary_key,tertiary_key
AMA_API_KEY=your_llm_api_key_here

# API URL for AMA activity LLM endpoint (OpenAI-compatible)
# Supports single URL or comma-separated list for failover:
# Single: AMA_API_URL=https://api.example.com/v1
# Failover: AMA_API_URL=https://primary.com/v1,https://secondary.com/v1,https://tertiary.com/v1
# Note: If both are lists, they must have the same length (one key per URL)
AMA_API_URL=https://api.openai.com/v1

# API URL for the frontend to connect to the backend
VITE_API_URL=http://localhost:3000

# CORS origins (comma-separated list for multiple origins)
CORS_ORIGIN=http://localhost:5173

# Base url for images captured from tool output
API_BASE_URL=http://localhost:5173

# Debug Flags (optional, for development)
# Set to 'true' to log system prompts and template processing
DEBUG_PROMPTS=false

# Set to 'true' to log MCP tool calls and responses
DEBUG_MCP=false

# Set to 'false' to disable LLM retry on tool errors (default: true)
ENABLE_TOOL_RETRY=true

# Maximum number of tool call retries (default: 2)
MAX_TOOL_RETRIES=2

# SearXNG search endpoint (used by mcp-web)
SEARXNG_URL=http://locslhost:8888
# SearXNG API access key (optional — sent as Bearer token)
# SEARXNG_KEY=

# KBBot — Knowledge Base Bot (Nostr DM-based)
KBBOT_LLM_API_KEY=your_gemini_api_key_here
KBBOT_LLM_MODEL=gemini-2.0-flash
# KBBOT_LLM_BASE_URL=            # Optional: custom LLM endpoint URL
KBBOT_NAMETAG=kbbot
KBBOT_NETWORK=testnet
# KBBOT_WELCOME_DELAY_MS=4000
# KBBOT_MAX_HISTORY_MESSAGES=20

# Viktor — DM-based research assistant
VIKTOR_LLM_API_KEY=
VIKTOR_LLM_MODEL=gpt-oss
VIKTOR_LLM_BASE_URL=
VIKTOR_NAMETAG=viktor
VIKTOR_NETWORK=testnet
